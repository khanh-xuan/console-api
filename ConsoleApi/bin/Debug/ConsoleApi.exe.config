<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
	</configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<appSettings>
		<add key="EnableBeFood" value="0" />
		<add key="EnableShopeeFood" value="1" />
		
		<add key="BeFoodGetTokenUrl" value="https://gw.be.com.vn/api/v1/be-delivery-gateway/api/v1/user/guest" />
		<add key="BeFoodGetRestaurantInfoUrl" value="https://gw.be.com.vn/api/v1/be-marketplace/web/restaurant/detail" />
		<add key="BeFoodMinId" value="1" />
		<add key="BeFoodMaxId" value="200" />
		<add key="BeFoodFolderJson" value="D:\API\Files\BeFood\Json" />
		<add key="BeFoodFolderExcel" value="D:\API\Files\BeFood\Excel" />

		<add key="ShopeeGetRestaurantInfoUrl" value="https://gappapi.deliverynow.vn/api/delivery/get_infos" />
		<add key="ShopeeFoodMinId" value="1" />
		<add key="ShopeeFoodMaxId" value="500" />
		<add key="ShopeeFoodFolderJson" value="D:\API\Files\ShopeeFood\Json" />
		<add key="ShopeeFoodFolderExcel" value="D:\API\Files\ShopeeFood\Excel" />
		
		<add key="X-Foody-Api-Version" value="1" />
		<add key="X-Foody-App-Type" value="1004" />
		<add key="X-Foody-Client-Language" value="vi" />
		<add key="X-Foody-Client-Id" value="" />
		<add key="X-Foody-Client-Type" value="1" />
		<add key="X-Foody-Client-Version" value="3.0.0" />

		<add key="PeriodicItem" value="10" />
		<add key="ShopeeFoodRange" value="500" />
		<add key="MaxJsonFileLength" value="200000" />
	</appSettings>
	<log4net>
		<root>
			<level value="ALL" />
			<appender-ref ref="RollingFile" />
		</root>
		<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
			<file value="D:\API\Logs\" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<param name="DatePattern" value="App-yyyyMMdd-HHmm'.log'" />
			<staticLogFileName value="false" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="10MB" />
			<encoding value="unicode" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %level - %message%newline" />
			</layout>
		</appender>
	</log4net>
</configuration>